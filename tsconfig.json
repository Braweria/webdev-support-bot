{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/__fixtures__/*", "./src/**/*.test.ts"]
}
